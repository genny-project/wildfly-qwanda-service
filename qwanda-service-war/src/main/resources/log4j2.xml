<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="Log4jTest" packages="">
	<Properties>
		<Property name="filename">test.log</Property>
	</Properties>

	<Appenders>
		<Console name="STDOUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="FILE" fileName="/users/jayavaniswaminathan/projects/genny/wildfly-qwanda-service/hibernate.log">
      		<PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
   		</File>

	</Appenders>

	<Loggers>
		<logger name="org.hibernate" level="ALL">
			<AppenderRef ref="FILE" />
		</logger>
		<Root level="DEBUG">
			<AppenderRef ref="FILE" />
		</Root>
		<Logger name="com.hazelcast.internal.diagnostics.HealthMonitor"
			level="ERROR" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Logger
			name="com.hazelcast.nio.serialization.HazelcastSerializationException"
			level="ERROR" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Logger name="life.genny" level="INFO" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>

	</Loggers>
</Configuration>
